            <script>
            function skip_function() {
              var txt;
              if (confirm("Are you sure you want to skip the session?")) {
                txt = "You pressed OK!";
                window.location.href = "you-can-do-it";
              }
            }
            </script>

            <button onclick="stop_function()">Stop</button>

            <p id="demo"></p>

            <script>
            function stop_function() {

              if (confirm("Are you sure you want to stop the session?")) {
                window.location.href = "end";
              }
            }
