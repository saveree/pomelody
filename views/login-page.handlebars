<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- This is a comment -->

        <title> Pomelody </title>

        <link href="css/style.css" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>


    <body>
       <h1 class="header"> Welcome to Pomelody! </h1>

        <div class="center-container" id="main-content">
                <form>
                    <h2> Username: </h2>
                    <input type="text">

                    <h2> Password: </h2>
                    <input type="password" ng-model="dataItem.password" class="form-control" name="password" placeholder="********" id="password"/>
                </form>
            <div class="enter_button">
                <a href="welcome"> <button type="button" id="enter-button"> Enter </button> </a>
            </div>
        </div>


        <script type="text/javascript">

        // Pressing Enter should press button
        var input = document.getElementById("password");
        input.addEventListener("keyup", function(event) {
          if (event.keyCode === 13) {
           event.preventDefault();
           document.getElementById("enter-button").click();
          }
        });
        </script>

    </body>
</html>
