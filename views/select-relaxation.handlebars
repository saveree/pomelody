        <title> Pomelody </title>

        <!-- Our  CSS -->
        <link href="css/style.css" rel="stylesheet">
        <!-- Makes Website  Responsive -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
         <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    </head>


    <body>

        <h1 class="header"> Select Relaxation Settings </h1>

        <div class="center-container" id="main-content">
            <div>
                <h4> Select Playlist URL: </h4>

                <form>
                  <input type="text" name="relax-url" class="url-input" id="relax-url">
                  <button type="button" onclick="verifyRelaxURL()" value = "Confirm" id="confirmBtn"> Confirm </button>
                </form>

                <h4> Select Time Interval: </h4>
                <div class="dropdown">
                  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    0 min
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li><a href="#" data-value="5 min">5 min </a></li>
                    <li><a href="#" data-value="10 min">10 min </a></li>
                    <li><a href="#" data-value="15 min">15 min </a></li>
                    <li><a href="#" data-value="20 min">20 min </a></li>
                    <li><a href="#" data-value="25 min">25 min </a></li>
                    <li><a href="#" data-value="30 min">30 min </a></li>
                    <li><a href="#" data-value="custom">Custom</a></li>
                  </ul>
                </div>
            </div>
        </div>
        <div class="header">
            <div class="back-button"><a href="select-productivity.html"> <button type="button"> Back </button> </a> </div>

        <div class="centered-footer">
            <button type="button" onclick="genJSON()"> Start </button> 
        </div>

        <script type="text/javascript" src="js/select-settings.js"></script>

        <script type="text/javascript">
        // For Dropdown Menu to Change upon selection
        $(".dropdown-menu li a").click(function(){
            // Selected Drop down value
            var selected_value = $(this).data('value')

            // If custom, prompt user to input
            if(selected_value == "custom") {
                console.log("original value is ", localStorage.getItem('relax_time'))
                var response = prompt("Please enter your desired time");
                // If user inputs invalid input
                while (isNaN(response)) {
                    alert("Please enter a valid number");
                    response = prompt("Please enter your desired time");
                }
                // If user presses cancel
                if (response == null) {
                    response = localStorage.getItem('relax_time');
                    console.log("fixing reposnse", response);
                    selected_value = response
                }
                else {
                    selected_value = response + ' min';
                }
            }
            
            // Update JSON and button 
            updateRelaxTimeVal(selected_value);
            $(this).parents(".dropdown").find('.btn').html(selected_value + ' <span class="caret"></span>');
            $(this).parents(".dropdown").find('.btn').val(selected_value);
        });

        // Pressing Enter should press button
        var input = document.getElementById("relax-url");
        input.addEventListener("keyup", function(event) {
          if (event.keyCode === 13) {
           event.preventDefault();
           document.getElementById("confirmBtn").click();
          }
        });

        </script>

    </body>
</html>
